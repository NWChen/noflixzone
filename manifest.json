{
	"name": "noflixzone",
	"description": "Aggressive binge-watching prevention.",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": [
		"storage",
		"tabs"	
	],
	"browser_action": {
		"default_popup": "index.html"
	},
	"background": {
		"persistent": true,
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://netflix.com/*",
						"*://www.netflix.com/*"],
			"css":     ["block.css"],
			"js": 	   ["block.js"],
			"run_at":  "document_end"
		}
	]
}

